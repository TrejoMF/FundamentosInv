<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.multimarca.tae.voceadorestae.Fragments.RAppFragment">
    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/rcomision_sppiner_apps"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:entries="@array/tuser_dropdown"
        android:layout_height="0dp"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/rapp_ilayout_text1"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:hint="Texto 1"
        android:layout_height="0dp">
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/rapp_edit_text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/rapp_ilayout_text2"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:hint="Texto 1"
        android:layout_height="0dp">
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/rapp_edit_text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.design.widget.TextInputLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/rapp_button_add"
        android:hint="@string/agregar_aplicativo"
        android:background="@color/colorAccent"
        android:textColor="@color/White"
        android:layout_width="match_parent"
        android:textSize="@dimen/StringText"
        android:layout_height="wrap_content"
        android:textColorHint="@color/White" />
</LinearLayout>
