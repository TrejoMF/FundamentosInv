<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/heightBig"
    android:id="@+id/appbarBig"
    >

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/big_header_collapsing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">
        <RelativeLayout
            android:id="@+id/bigdaddy"
            android:paddingTop="?attr/actionBarSize"
            android:paddingRight="16dip"
            android:paddingLeft="16dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/big_header_titulo"
                android:textSize="@dimen/StringTitle"
                android:text="@string/prueba_texto"
                android:textColor="@color/White"
                android:layout_width="match_parent"
                android:maxHeight="47dip"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/big_header_companyText"
                android:layout_below="@id/big_header_titulo"
                android:textSize="@dimen/StringText"
                android:text="@string/data_CompaÃ±ia_hint"
                android:textColor="@color/White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp" />
            <TextView
                android:id="@+id/big_header_numberText"
                android:layout_below="@id/big_header_companyText"
                android:textSize="@dimen/StringText"
                android:text="@string/data_number_hint"
                android:textColor="@color/White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp" />
            <TextView
                android:id="@+id/big_header_amount"
                android:layout_below="@id/big_header_numberText"
                android:textSize="@dimen/StringText"
                android:text="@string/data_amount_hint"
                android:textColor="@color/White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"  />
        </RelativeLayout>
        <android.support.v7.widget.Toolbar
            android:id="@+id/big_toolbar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_collapseMode="pin">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
<!--                <ImageButton
                    android:id="@+id/back_button"
                    android:src="@drawable/ic_arrow_back_white_24dp"
                    android:layout_width="30dip"
                    android:paddingRight="8dip"
                    android:paddingLeft="0dip"
                    android:paddingBottom="6dip"
                    android:paddingTop="6dip"
                    android:layout_height="42dip"
                    android:contentDescription="@string/toolbar_contenDec_back"
                    android:scaleType="centerCrop"
                    android:background="?attr/selectableItemBackground"
                    />-->
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.CollapsingToolbarLayout>
</android.support.design.widget.AppBarLayout>