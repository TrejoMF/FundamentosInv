<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ResumeTae">
    <RelativeLayout
        android:padding="@dimen/padTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/notice_tae"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/StringTitle"
            android:text="@string/notice_example_text"
            android:textColor="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/resume_date"
            android:layout_below="@id/notice_tae"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padTop"
            android:textSize="@dimen/StringText"
            android:text="@string/resume_text_datetime" />
        <TextView
            android:id="@+id/resume_date_today"
            android:layout_below="@id/resume_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/StringTitle"
            android:textColor="@color/colorPrimary"
            android:text="@string/masked_date" />
        <TextView
            android:id="@+id/resume_folio"
            android:layout_below="@id/resume_date_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padTop"
            android:textSize="@dimen/StringText"
            android:text="@string/resume_text_folio" />
        <TextView
            android:id="@+id/resume_folio_number"
            android:layout_below="@id/resume_folio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/StringTitle"
            android:textColor="@color/colorPrimary"
            android:text="@string/masked_folio" />

        <TextView
            android:id="@+id/resume_balance"
            android:layout_below="@id/resume_folio_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padTop"
            android:textSize="@dimen/StringText"
            android:text="@string/resume_string_balance" />
        <TextView
            android:id="@+id/resume_balance_number"
            android:layout_below="@id/resume_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/StringTitle"
            android:textColor="@color/colorPrimary"
            android:text="@string/masked_resume_balance" />
        <Button
            android:id="@+id/resume_goback"
            android:layout_below="@id/resume_balance_number"
            android:text="@string/resume_goback_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip"
            android:textColor="@color/colorAccent"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
</ScrollView>
