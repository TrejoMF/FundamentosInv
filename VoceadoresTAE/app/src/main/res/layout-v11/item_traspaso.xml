<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
    android:layout_marginTop="8dip"
    android:layout_marginBottom="8dip"
    android:background="?android:attr/selectableItemBackground"
    >

    <TextView
        android:id="@+id/traspaso_cliente"
        android:layout_width="200dip"
        android:gravity="start"
        android:text="@string/traspaso_hint_text"
        android:layout_height="35dip" />
    <TextView
        android:id="@+id/traspaso_fecha"
        android:layout_width="100dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/traspasos_hint_fecha_text"
        android:layout_height="35dip" />
    <TextView
        android:id="@+id/traspaso_banco"
        android:layout_below="@id/traspaso_cliente"
        android:layout_width="200dip"
        android:layout_marginTop="8dip"
        android:text="@string/traspaso_hint_Banco_text"
        android:layout_height="20dip" />
    <TextView
        android:id="@+id/traspaso_valor"
        android:layout_width="100dip"
        android:layout_marginTop="8dip"
        android:layout_below="@id/traspaso_fecha"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/traspasos_hint_valor_text"
        android:layout_height="20dip" />

    <View
        android:layout_below="@id/traspaso_banco"
        android:layout_marginTop="8dip"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/Dividers"/>
</RelativeLayout>